{% schema %}
{
  "name": "Collection Product 1",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Featured collection"
    },
    {
      "type": "range",
      "id": "total_products",
      "min": 1,
      "max": 16,
      "step": 1,
      "label": "Total Products To Show",
      "default": 8
    },
    {
      "type": "select",
      "id": "container_shape",
      "options": [
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "circle",
          "label": "Circle"
        },
        {
          "value": "rectangle",
          "label": "Rectangle"
        }
      ],
      "default": "rectangle",
      "label": "Product Container Shape"
    },
    {
      "type": "select",
      "id": "image_fit",
